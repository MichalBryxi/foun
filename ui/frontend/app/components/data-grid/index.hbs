{{yield
  (hash
    ActionBar=(component
      'data-grid/action-bar' selection=this.selection selectAll=this.selectAll
    )
    Table=(component
      'data-grid/table'
      columns=@columns
      rows=@rows
      sorts=@sorts
      onUpdateSorts=@onUpdateSorts
      footerRows=@footerRows
      onSelect=(fn (mut this.selection))
      selection=this.selection
    )
  )
}}