    @label={{t 'selectAll'}}
    @checked={{this.isSelectAllChecked}}
    @onChange={{@selectAll}}
  />
  {{yield
    (hash
      Button=(component
        'data-grid/action-bar/button'
        areActionsDisabled=this.areActionsDisabled
        selection=@selection
      )
    )
  }}
</div>