{{#let
  (changeset this.model.newInvoice this.InvoiceValidations)
  as |changeset|
}}
  <ChangesetForm
    @onSubmit={{perform this.parseInvoice}}
    @changeset={{changeset}}
    class='grid gap-4'
    as |Form|
  >
    <Form.Input
      @label={{t 'model.invoice.date'}}
      @fieldName='issuedAtString'
      type='date'
    />
    <Form.Textarea @label={{t 'model.invoice.source'}} @fieldName='source' />
    <SubmitButton @changeset={{changeset}} @task={{this.parseInvoice}} />
  </ChangesetForm>
{{/let}}