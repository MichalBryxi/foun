<DataGrid
  @columns={{this.columns}}
  @rows={{this.rows}}
  @onSelect={{fn (mut this.selection)}}
  @selection={{this.selection}}
  as |dg|
>
  <dg.ActionBar as |ab|>
    <ab.Selection as |se|>
      <se.Button @onClick={{this.deleteInvoices}} @intent='danger'>
        {{t 'delete'}}
      </se.Button>
    </ab.Selection>
  </dg.ActionBar>

  <dg.Table />
</DataGrid>