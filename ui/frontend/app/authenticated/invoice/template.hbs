<div class='mb-5 border-b border-gray-200 pb-5'>
  <h3 class='text-lg font-medium leading-6 text-gray-900'>
    {{format-date @model.invoice.issuedAt}}
  </h3>
</div>

<DataGrid
  @columns={{this.columns}}
  @rows={{this.rows}}
  @footerRows={{this.footerRows}}
  @sorts={{this.sorts}}
  @onUpdateSorts={{fn (mut this.sorts)}}
  as |dg|
>
  <dg.ActionBar as |ab|>
    <ab.Selection as |se|>
      <se.Button @onClick={{fn this.togglePaid true}} @intent='primary'>
        {{t 'invoice.markPaid'}}
      </se.Button>
      <se.Button @onClick={{fn this.togglePaid false}} @intent='warning'>
        {{t 'invoice.markNotPaid'}}
      </se.Button>
      <se.Button @onClick={{this.sendEmail}}>
        {{t 'invoice.sendEmail'}}
      </se.Button>
    </ab.Selection>
  </dg.ActionBar>

  <dg.Table />
</DataGrid>