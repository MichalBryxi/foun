<DataGrid
  @columns={{this.columns}}
  @rows={{this.rows}}
  @footerRows={{this.footerRows}}
  as |dg|
>
  <dg.ActionBar as |ab|>
    <ab.Selection as |se|>
      <se.Button @onClick={{fn this.togglePaid true}} @intent='primary'>
        {{t 'invoice.markPaid'}}
      </se.Button>
      <se.Button @onClick={{fn this.togglePaid false}} @intent='warning'>
        {{t 'invoice.markNotPaid'}}
      </se.Button>
      <se.Button @onClick={{this.sendEmail}}>
        {{t 'invoice.sendEmail'}}
      </se.Button>
    </ab.Selection>
  </dg.ActionBar>

  <dg.Table />
</DataGrid>